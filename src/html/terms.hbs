  <body class="min-h-screen bg-background text-foreground flex flex-col">
    <!-- Header / Back nav -->
    <header class="w-full border-b bg-muted/20 relative z-10">
      <div class="mx-auto max-w-5xl px-4 py-3">
        <a href="/" class="inline-flex items-center gap-2 text-sm link">
          <span aria-hidden="true">‚Üê</span>
          <span>Back</span>
        </a>
      </div>
    </header>

    <!-- Main content -->
    <main class="mx-auto max-w-5xl px-4 py-8 pb-24 flex-1 w-full">
      <section class="surface-card p-6 md:p-8">
        <article
          class="prose prose-stone dark:prose-invert prose-headings:scroll-mt-24 prose-a:underline-offset-2 prose-a:text-primary"
        >
          {{{terms}}}
        </article>
      </section>
    </main>

    <script src="/static/main.js"></script>

  </body>
